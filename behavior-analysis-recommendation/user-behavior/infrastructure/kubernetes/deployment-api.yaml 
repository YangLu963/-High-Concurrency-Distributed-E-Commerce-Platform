# deployment-api.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: recommendation-api
  namespace: recommendation-system
  labels:
    app: recommendation-api
    version: v1
spec:
  replicas: 3
  selector:
    matchLabels:
      app: recommendation-api
  template:
    metadata:
      labels:
        app: recommendation-api
        version: v1
      annotations:
        prometheus.io/scrape: "true"
        prometheus.io/port: "8000"
        prometheus.io/path: "/metrics"
    spec:
      serviceAccountName: s3-access-sa
      containers:
      - name: api
        image: ${ECR_REPO}/recommendation-api:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 8000
          name: http
        - containerPort: 8001
          name: metrics
        env:
        - name: REDIS_URL
          valueFrom:
            configMapKeyRef:
              name: recommendation-config
              key: REDIS_URL
        - name: KAFKA_BROKER
          valueFrom:
            configMapKeyRef:
              name: recommendation-config
              key: KAFKA_BROKER
        - name: DB_PASSWORD
          valueFrom:
            secretKeyRef:
              name: recommendation-secrets
              key: DB_PASSWORD
        resources:
          requests:
            memory: "512Mi"
            cpu: "250m"
          limits:
            memory: "1Gi"
            cpu: "500m"
        livenessProbe:
          httpGet:
            path: /health
            port: 8000
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /health
            port: 8000
          initialDelaySeconds: 5
          periodSeconds: 5
        volumeMounts:
        - name: models
          mountPath: /app/models
        - name: feature-store
          mountPath: /app/feature_store
      volumes:
      - name: models
        emptyDir: {}
      - name: feature-store
        emptyDir: {}
---
apiVersion: v1
kind: Service
metadata:
  name: recommendation-api
  namespace: recommendation-system
  labels:
    app: recommendation-api
spec:
  selector:
    app: recommendation-api
  ports:
  - port: 80
    targetPort: 8000
    name: http
  - port: 8001
    targetPort: 8001
    name: metrics
  type: ClusterIP