    "{\n",
    " \"cells\": [\n",
    "  {\n",
    "   \"cell_type\": \"markdown\",\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# 推荐系统指标分析\\n\",\n",
    "    \"\\n\",\n",
    "    \"## 1. 业务指标监控\\n\",\n",
    "    \"## 2. 模型效果对比\\n\",\n",
    "    \"## 3. 用户行为分析\\n\",\n",
    "    \"## 4. 冷启动问题诊断\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"import pandas as pd\\n\",\n",
    "    \"import numpy as np\\n\",\n",
    "    \"import matplotlib.pyplot as plt\\n\",\n",
    "    \"import seaborn as sns\\n\",\n",
    "    \"from datetime import datetime, timedelta\\n\",\n",
    "    \"import plotly.express as px\\n\",\n",
    "    \"import plotly.graph_objects as go\\n\",\n",
    "    \"from plotly.subplots import make_subplots\\n\",\n",
    "    \"import warnings\\n\",\n",
    "    \"warnings.filterwarnings('ignore')\\n\",\n",
    "    \"\\n\",\n",
    "    \"# 设置中文显示\\n\",\n",
    "    \"plt.rcParams['font.sans-serif'] = ['Arial Unicode MS', 'DejaVu Sans']\\n\",\n",
    "    \"plt.rcParams['axes.unicode_minus'] = False\\n\",\n",
    "    \"\\n\",\n",
    "    \"print('Libraries imported successfully')\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# 连接数据库\\n\",\n",
    "    \"import psycopg2\\n\",\n",
    "    \"import redis\\n\",\n",
    "    \"\\n\",\n",
    "    \"# PostgreSQL连接\\n\",\n",
    "    \"pg_conn = psycopg2.connect(\\n\",\n",
    "    \"    host='localhost',\\n\",\n",
    "    \"    database='ecommerce',\\n\",\n",
    "    \"    user='user',\\n\",\n",
    "    \"    password='password'\\n\",\n",
    "    \")\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Redis连接\\n\",\n",
    "    \"redis_client = redis.Redis(host='localhost', port=6379, decode_responses=True)\\n\",\n",
    "    \"\\n\",\n",
    "    \"print('Database connected')\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# 加载数据\\n\",\n",
    "    \"query = \\\"\\\"\\\"\\n\",\n",
    "    \"SELECT \\n\",\n",
    "    \"    date_trunc('hour', timestamp) as hour,\\n\",\n",
    "    \"    COUNT(DISTINCT user_id) as dau,\\n\",\n",
    "    \"    COUNT(*) as total_events,\\n\",\n",
    "    \"    SUM(CASE WHEN action='impression' THEN 1 ELSE 0 END) as impressions,\\n\",\n",
    "    \"    SUM(CASE WHEN action='click' THEN 1 ELSE 0 END) as clicks,\\n\",\n",
    "    \"    SUM(CASE WHEN action='purchase' THEN 1 ELSE 0 END) as purchases,\\n\",\n",
    "    \"    SUM(CASE WHEN action='purchase' THEN price ELSE 0 END) as revenue\\n\",\n",
    "    \"FROM user_behaviors\\n\",\n",
    "    \"WHERE timestamp >= NOW() - INTERVAL '7 days'\\n\",\n",
    "    \"GROUP BY date_trunc('hour', timestamp)\\n\",\n",
    "    \"ORDER BY hour\\n\",\n",
    "    \"\\\"\\\"\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"df = pd.read_sql(query, pg_conn)\\n\",\n",
    "    \"df['hour'] = pd.to_datetime(df['hour'])\\n\",\n",
    "    \"df['ctr'] = df['clicks'] / df['impressions']\\n\",\n",
    "    \"df['purchase_rate'] = df['purchases'] / df['clicks']\\n\",\n",
    "    \"df['revenue_per_user'] = df['revenue'] / df['dau']\\n\",\n",
    "    \"\\n\",\n",
    "    \"print(f'Loaded {len(df)} hours of data')\\n\",\n",
    "    \"df.tail()\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# 核心指标趋势\\n\",\n",
    "    \"fig = make_subplots(\\n\",\n",
    "    \"    rows=2, cols=2,\\n\",\n",
    "    \"    subplot_titles=('DAU趋势', 'CTR趋势', '转化率趋势', 'ARPU趋势')\\n\",\n",
    "    \")\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig.add_trace(\\n\",\n",
    "    \"    go.Scatter(x=df['hour'], y=df['dau'], mode='lines', name='DAU'),\\n\",\n",
    "    \"    row=1, col=1\\n\",\n",
    "    \")\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig.add_trace(\\n\",\n",
    "    \"    go.Scatter(x=df['hour'], y=df['ctr'], mode='lines', name='CTR'),\\n\",\n",
    "    \"    row=1, col=2\\n\",\n",
    "    \")\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig.add_trace(\\n\",\n",
    "    \"    go.Scatter(x=df['hour'], y=df['purchase_rate'], mode='lines', name='转化率'),\\n\",\n",
    "    \"    row=2, col=1\\n\",\n",
    "    \")\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig.add_trace(\\n\",\n",
    "    \"    go.Scatter(x=df['hour'], y=df['revenue_per_user'], mode='lines', name='ARPU'),\\n\",\n",
    "    \"    row=2, col=2\\n\",\n",
    "    \")\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig.update_layout(height=600, title_text='核心指标趋势')\\n\",\n",
    "    \"fig.show()\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# 用户分群分析\\n\",\n",
    "    \"segment_query = \\\"\\\"\\\"\\n\",\n",
    "    \"SELECT \\n\",\n",
    "    \"    user_segment,\\n\",\n",
    "    \"    COUNT(DISTINCT u.user_id) as user_count,\\n\",\n",
    "    \"    AVG(b.ctr) as avg_ctr,\\n\",\n",
    "    \"    AVG(b.purchase_rate) as avg_purchase_rate,\\n\",\n",
    "    \"    AVG(b.avg_order_value) as avg_order_value\\n\",\n",
    "    \"FROM user_profiles u\\n\",\n",
    "    \"LEFT JOIN user_behavior_stats b ON u.user_id = b.user_id\\n\",\n",
    "    \"GROUP BY user_segment\\n\",\n",
    "    \"\\\"\\\"\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"segment_df = pd.read_sql(segment_query, pg_conn)\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig = make_subplots(\\n\",\n",
    "    \"    rows=1, cols=2,\\n\",\n",
    "    \"    specs=[[{'type':'pie'}, {'type':'bar'}]],\\n\",\n",
    "    \"    subplot_titles=('用户分群分布', '各分群CTR')\\n\",\n",
    "    \")\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig.add_trace(\\n\",\n",
    "    \"    go.Pie(labels=segment_df['user_segment'], values=segment_df['user_count']),\\n\",\n",
    "    \"    row=1, col=1\\n\",\n",
    "    \")\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig.add_trace(\\n\",\n",
    "    \"    go.Bar(x=segment_df['user_segment'], y=segment_df['avg_ctr']),\\n\",\n",
    "    \"    row=1, col=2\\n\",\n",
    "    \")\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig.update_layout(height=400, title_text='用户分群分析')\\n\",\n",
    "    \"fig.show()\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# 冷启动问题分析\\n\",\n",
    "    \"cold_start_query = \\\"\\\"\\\"\\n\",\n",
    "    \"SELECT \\n\",\n",
    "    \"    CASE \\n\",\n",
    "    \"        WHEN days_since_first_visit <= 7 THEN 'new_user'\\n\",\n",
    "    \"        WHEN days_since_first_visit <= 30 THEN 'medium_user'\\n\",\n",
    "    \"        ELSE 'old_user'\\n\",\n",
    "    \"    END as user_cohort,\\n\",\n",
    "    \"    CASE \\n\",\n",
    "    \"        WHEN days_since_launch <= 7 THEN 'new_item'\\n\",\n",
    "    \"        ELSE 'old_item'\\n\",\n",
    "    \"    END as item_cohort,\\n\",\n",
    "    \"    AVG(clicked) as ctr\\n\",\n",
    "    \"FROM (\\n\",\n",
    "    \"    SELECT \\n\",\n",
    "    \"        b.user_id,\\n\",\n",
    "    \"        b.item_id,\\n\",\n",
    "    \"        EXTRACT(DAY FROM NOW() - u.first_visit_date) as days_since_first_visit,\\n\",\n",
    "    \"        EXTRACT(DAY FROM NOW() - i.launch_date) as days_since_launch,\\n\",\n",
    "    \"        CASE WHEN b.action='click' THEN 1 ELSE 0 END as clicked\\n\",\n",
    "    \"    FROM user_behaviors b\\n\",\n",
    "    \"    JOIN users u ON b.user_id = u.user_id\\n\",\n",
    "    \"    JOIN items i ON b.item_id = i.item_id\\n\",\n",
    "    \"    WHERE b.action IN ('impression', 'click')\\n\",\n",
    "    \") t\\n\",\n",
    "    \"GROUP BY user_cohort, item_cohort\\n\",\n",
    "    \"\\\"\\\"\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"cold_df = pd.read_sql(cold_start_query, pg_conn)\\n\",\n",
    "    \"\\n\",\n",
    "    \"# 透视表\\n\",\n",
    "    \"pivot_df = cold_df.pivot(index='user_cohort', columns='item_cohort', values='ctr')\\n\",\n",
    "    \"\\n\",\n",
    "    \"plt.figure(figsize=(10, 6))\\n\",\n",
    "    \"sns.heatmap(pivot_df, annot=True, fmt='.3f', cmap='YlOrRd')\\n\",\n",
    "    \"plt.title('冷启动问题分析 - 用户/物品新老交叉CTR')\\n\",\n",
    "    \"plt.show()\\n\",\n",
    "    \"\\n\",\n",
    "    \"# 计算冷启动衰减\\n\",\n",
    "    \"old_user_old_item = pivot_df.loc['old_user', 'old_item']\\n\",\n",
    "    \"new_user_old_item = pivot_df.loc['new_user', 'old_item']\\n\",\n",
    "    \"old_user_new_item = pivot_df.loc['old_user', 'new_item']\\n\",\n",
    "    \"new_user_new_item = pivot_df.loc['new_user', 'new_item']\\n\",\n",
    "    \"\\n\",\n",
    "    \"print(f'用户冷启动衰减: {(new_user_old_item - old_user_old_item)/old_user_old_item*100:.2f}%')\\n\",\n",
    "    \"print(f'物品冷启动衰减: {(old_user_new_item - old_user_old_item)/old_user_old_item*100:.2f}%')\\n\",\n",
    "    \"print(f'双冷启动衰减: {(new_user_new_item - old_user_old_item)/old_user_old_item*100:.2f}%')\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# 推荐多样性分析\\n\",\n",
    "    \"diversity_query = \\\"\\\"\\\"\\n\",\n",
    "    \"SELECT \\n\",\n",
    "    \"    request_id,\\n\",\n",
    "    \"    COUNT(DISTINCT category_id) as category_diversity,\\n\",\n",
    "    \"    AVG(popularity_score) as avg_popularity\\n\",\n",
    "    \"FROM (\\n\",\n",
    "    \"    SELECT \\n\",\n",
    "    \"        r.request_id,\\n\",\n",
    "    \"        i.category_id,\\n\",\n",
    "    \"        i.popularity_score\\n\",\n",
    "    \"    FROM recommendation_logs r\\n\",\n",
    "    \"    JOIN items i ON r.item_id = i.item_id\\n\",\n",
    "    \"    WHERE r.timestamp >= NOW() - INTERVAL '1 day'\\n\",\n",
    "    \") t\\n\",\n",
    "    \"GROUP BY request_id\\n\",\n",
    "    \"\\\"\\\"\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"diversity_df = pd.read_sql(diversity_query, pg_conn)\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig, axes = plt.subplots(1, 2, figsize=(12, 5))\\n\",\n",
    "    \"\\n\",\n",
    "    \"# 品类多样性分布\\n\",\n",
    "    \"axes[0].hist(diversity_df['category_diversity'], bins=20, edgecolor='black')\\n\",\n",
    "    \"axes[0].set_xlabel('品类数量')\\n\",\n",
    "    \"axes[0].set_ylabel('频次')\\n\",\n",
    "    \"axes[0].set_title('推荐结果品类多样性分布')\\n\",\n",
    "    \"\\n\",\n",
    "    \"# 多样性 vs 点击率\\n\",\n",
    "    \"ctr_by_diversity = diversity_df.groupby('category_diversity')['clicked'].mean()\\n\",\n",
    "    \"axes[1].plot(ctr_by_diversity.index, ctr_by_diversity.values, 'o-')\\n\",\n",
    "    \"axes[1].set_xlabel('品类多样性')\\n\",\n",
    "    \"axes[1].set_ylabel('点击率')\\n\",\n",
    "    \"axes[1].set_title('多样性 vs 点击率')\\n\",\n",
    "    \"\\n\",\n",
    "    \"plt.tight_layout()\\n\",\n",
    "    \"plt.show()\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# AB测试结果对比\\n\",\n",
    "    \"ab_query = \\\"\\\"\\\"\\n\",\n",
    "    \"SELECT \\n\",\n",
    "    \"    experiment_id,\\n\",\n",
    "    \"    variant,\\n\",\n",
    "    \"    COUNT(DISTINCT user_id) as users,\\n\",\n",
    "    \"    SUM(impressions) as impressions,\\n\",\n",
    "    \"    SUM(clicks) as clicks,\\n\",\n",
    "    \"    SUM(purchases) as purchases,\\n\",\n",
    "    \"    SUM(revenue) as revenue\\n\",\n",
    "    \"FROM ab_test_results\\n\",\n",
    "    \"WHERE experiment_id = 'ranking_model_v2'\\n\",\n",
    "    \"GROUP BY experiment_id, variant\\n\",\n",
    "    \"\\\"\\\"\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"ab_df = pd.read_sql(ab_query, pg_conn)\\n\",\n",
    "    \"ab_df['ctr'] = ab_df['clicks'] / ab_df['impressions']\\n\",\n",
    "    \"ab_df['conversion'] = ab_df['purchases'] / ab_df['clicks']\\n\",\n",
    "    \"ab_df['arpu'] = ab_df['revenue'] / ab_df['users']\\n\",\n",
    "    \"\\n\",\n",
    "    \"fig, axes = plt.subplots(2, 2, figsize=(14, 10))\\n\",\n",
    "    \"\\n\",\n",
    "    \"metrics = ['ctr', 'conversion', 'arpu', 'users']\\n\",\n",
    "    \"titles = ['点击率', '转化率', 'ARPU', '用户数']\\n\",\n",
    "    \"\\n\",\n",
    "    \"for i, (metric, title) in enumerate(zip(metrics, titles)):\\n\",\n",
    "    \"    ax = axes[i//2, i%2]\\n\",\n",
    "    \"    variants = ab_df['variant']\\n\",\n",
    "    \"    values = ab_df[metric]\\n\",\n",
    "    \"    \\n\",\n",
    "    \"    bars = ax.bar(variants, values)\\n\",\n",
    "    \"    \\n\",\n",
    "    \"    # 标注提升\\n\",\n",
    "    \"    control_value = values[variants == 'control'].values[0]\\n\",\n",
    "    \"    for j, (variant, value) in enumerate(zip(variants, values)):\\n\",\n",
    "    \"        if variant != 'control' and control_value > 0:\\n\",\n",
    "    \"            lift = (value - control_value) / control_value\\n\",\n",
    "    \"            ax.text(j, value, f'{lift*100:.1f}%', ha='center', va='bottom')\\n\",\n",
    "    \"    \\n\",\n",
    "    \"    ax.set_title(title)\\n\",\n",
    "    \"    ax.set_ylabel(metric)\\n\",\n",
    "    \"\\n\",\n",
    "    \"plt.tight_layout()\\n\",\n",
    "    \"plt.show()\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# 特征重要性分析\\n\",\n",
    "    \"feature_importance = pd.DataFrame({\\n\",\n",
    "    \"    'feature': ['user_click_count', 'item_popularity', 'category_match', \\n\",\n",
    "    \"                'price_sensitivity', 'time_decay', 'session_depth'],\\n\",\n",
    "    \"    'importance': [0.25, 0.20, 0.15, 0.12, 0.10, 0.08]\\n\",\n",
    "    \"})\\n\",\n",
    "    \"\\n\",\n",
    "    \"plt.figure(figsize=(10, 6))\\n\",\n",
    "    \"sns.barplot(data=feature_importance, x='importance', y='feature')\\n\",\n",
    "    \"plt.title('特征重要性分析')\\n\",\n",
    "    \"plt.xlabel('重要性得分')\\n\",\n",
    "    \"plt.tight_layout()\\n\",\n",
    "    \"plt.show()\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# 生成分析报告\\n\",\n",
    "    \"from datetime import datetime\\n\",\n",
    "    \"\\n\",\n",
    "    \"report = f\\\"\\\"\\\"\\n\",\n",
    "    \"# 推荐系统周报 - {datetime.now().strftime('%Y-%m-%d')}\\n\",\n",
    "    \"\\n\",\n",
    "    \"## 核心指标\\n\",\n",
    "    \"- 周DAU均值: {df['dau'].mean():.0f}\\n\",\n",
    "    \"- 周CTR均值: {df['ctr'].mean():.2%}\\n\",\n",
    "    \"- 周转化率均值: {df['purchase_rate'].mean():.2%}\\n\",\n",
    "    \"- 周ARPU: {df['revenue_per_user'].mean():.2f}\\n\",\n",
    "    \"\\n\",\n",
    "    \"## 冷启动问题\\n\",\n",
    "    \"- 用户冷启动衰减: {(new_user_old_item - old_user_old_item)/old_user_old_item*100:.2f}%\\n\",\n",
    "    \"- 物品冷启动衰减: {(old_user_new_item - old_user_old_item)/old_user_old_item*100:.2f}%\\n\",\n",
    "    \"\\n\",\n",
    "    \"## AB测试结果\\n\",\n",
    "    \"- 实验: ranking_model_v2\\n\",\n",
    "    \"- 点击率提升: {ab_df[ab_df['variant']=='treatment']['ctr'].values[0] / ab_df[ab_df['variant']=='control']['ctr'].values[0] - 1:.2%}\\n\",\n",
    "    \"- 显著性: {'显著' if p_value < 0.05 else '不显著'}\\n\",\n",
    "    \"\\n\",\n",
    "    \"## 建议\\n\",\n",
    "    \"1. 优化冷启动策略，对新用户使用内容推荐\\n\",\n",
    "    \"2. 增加推荐结果多样性，目标品类数>=5\\n\",\n",
    "    \"3. 如果AB测试显著，准备全量上线\\n\",\n",
    "    \"\\\"\\\"\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"print(report)\\n\",\n",
    "    \"\\n\",\n",
    "    \"# 保存报告\\n\",\n",
    "    \"with open(f'reports/weekly_report_{datetime.now().strftime(\"%Y%m%d\")}.md', 'w') as f:\\n\",\n",
    "    \"    f.write(report)\"\n",
    "   ]\n",
    "  }\n",
    " ],\n",
